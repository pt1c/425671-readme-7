{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/account/authentication": [
        "libs/account/authentication/src/index.ts"
      ],
      "@project/account/blog-user": ["libs/account/blog-user/src/index.ts"],
      "@project/account/config": ["libs/account/config/src/index.ts"],
      "@project/blog/comment": ["libs/blog/comment/src/index.ts"],
      "@project/blog/models": ["libs/blog/models/src/index.ts"],
      "@project/blog/post": ["libs/blog/post/src/index.ts"],
      "@project/blog/tag": ["libs/blog/tag/src/index.ts"],
      "@project/shared/authentication": [
        "libs/shared/authentication/src/index.ts"
      ],
      "@project/shared/core": ["libs/shared/core/src/index.ts"],
      "@project/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@project/shared/helpers": ["libs/shared/helpers/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
